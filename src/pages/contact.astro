---
import Layout from "../layouts/Layout.astro";
import CopyMail from "../components/links/copyMail.jsx";

const links = [
  {
    href: "https://linkedin.com/in/nicolasdotcom",
    label: "LinkedIn",
  },
  { href: "https://github.com/nicolasdotcom", label: "GitHub" },
  { href: "mailto:t.nicolassanchez@gmail.com", label: "Email" },
];
---

<Layout>
  <section
    class="bg-gray-900 flex min-h-screen flex-col items-center justify-center px-6"
  >
    <div class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-white mb-4">Contacto</h1>
      <p class="text-xl text-gray-300">Â¡Estoy disponible para nuevas oportunidades!</p>
    </div>

    <CopyMail client:visible />

    <!-- Lista de Links -->
    <div class="w-full max-w-xl space-y-4">
      {
        links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="block font-bold w-full rounded-lg bg-primary hover:bg-secondary drop-shadow-[2px_2px_0_#0debd8] px-6 py-3 text-center text-white transition "
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .animate-spin-slow {
    animation: spin 25s linear infinite;
  }

  @keyframes spin {
    100% {
      transform: rotate(360deg);
    }
  }
</style>
