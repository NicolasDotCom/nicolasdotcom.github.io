---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa"; 
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
	<h2
		class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
	>
		<span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
		<span class="drop-shadow-[2px_2px_0_#7836cf]">Servicios</span>
	</h2>

	<div class="mt-10 grid gap-6 md:grid-cols-3">
		<ServiceCard
			icon={FaLaptopCode}
			title="Desarrollo Full-Stack"
			description="Aplicaciones web modernas con Laravel, React e Inertia.js. Experiencia en sistemas de ticketing, control de inventarios y SPAs."
		/>
		<ServiceCard
			icon={FaBolt}
			title="Frontend Moderno"
			description="Interfaces responsive y dinámicas con React, Tailwind CSS, HTML5 y CSS3. Experiencia de usuario fluida y de tipo Single-Page Application."
		/>

		<ServiceCard
			icon={FaRocket}
			title="Backend & Bases de Datos"
			description="APIs RESTful con Laravel y PHP. Diseño y optimización de bases de datos MySQL con consultas SQL eficientes."
		/>
	</div>
</section>
